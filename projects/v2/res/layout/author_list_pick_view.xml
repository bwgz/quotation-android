<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/author_pick_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
	android:background="@drawable/red_list_selector"
    android:orientation="horizontal"
    android:padding="8dp" >

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/author_image"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_gravity="top"
        android:scaleType="centerCrop"
        android:src="@drawable/pick_image_holder" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:orientation="vertical" >
        
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" >
        
	        <TextView
	            android:id="@+id/author_name"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:fontFamily="sans-serif"
				android:textStyle="bold"
                android:text="@string/loading_author"
	            android:textSize="18sp" />
 
	        <TextView
	            android:id="@+id/author_notable_for"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:fontFamily="sans-serif"
	            android:textSize="18sp" />
	        
	    </LinearLayout>
	    
		<TextView
	        android:id="@+id/author_description"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
		    android:maxLines="2"
		    android:minLines="2"
	        android:ellipsize="end"
	        android:fontFamily="sans-serif"
	        android:textSize="12sp" />
		    
	    </LinearLayout>

</LinearLayout>